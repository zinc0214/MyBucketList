<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="writeClickListener"
            type="android.view.View.OnClickListener" />

        <variable
            name="myPageClickListener"
            type="android.view.View.OnClickListener" />

        <variable
            name="homeClickListener"
            type="android.view.View.OnClickListener" />

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/mypage_bottom_sheet"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/main_bottom_background">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_alignParentBottom="true">

                <ImageView
                    android:onClick="@{homeClickListener}"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="54dp"
                    android:background="@drawable/mypage_bottom_list" />

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="60dp"
                    android:layout_marginEnd="54dp"
                    android:background="@drawable/mypage_my" />

                <ImageView
                    android:id="@+id/plus"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/add_bucket_list"
                    android:onClick="@{writeClickListener}" />

            </RelativeLayout>


        </RelativeLayout>



    </RelativeLayout>
</layout>