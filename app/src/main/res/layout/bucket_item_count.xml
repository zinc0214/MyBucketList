<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="bucketClickListener"
            type="android.view.View.OnClickListener" />

        <variable
            name="bucketSuccessListener"
            type="android.view.View.OnClickListener" />

        <variable
            name="bucket"
            type="String" />

        <variable
            name="currentValue"
            type="String" />

        <variable
            name="progressBarVisible"
            type="Integer" />

        <variable
            name="successImgVisible"
            type="Integer" />

    </data>

    <LinearLayout
        android:id="@+id/bucket_item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/bucket_item_background"
        android:maxHeight="78dp"
        android:minHeight="64dp"
        app:clickToClose="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:onClick="@{bucketClickListener}"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/bucket_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:maxHeight="44dp"
                android:minHeight="22dp"
                android:tag="Hover"
                android:text="@{bucket}" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bucket_title"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:visibility="@{progressBarVisible}">

                <ProgressBar
                    android:id="@+id/horizontal_progress_bar"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="180dp"
                    android:layout_height="4dp"
                    android:max="100"
                    android:progress="10"
                    android:progressDrawable="@drawable/horizontal_progressbar_background" />

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:text="@{currentValue}"
                    android:textAlignment="center"
                    android:textColor="@color/subColor"
                    android:textSize="11sp" />


            </LinearLayout>

            <RelativeLayout
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:onClick="@{bucketSuccessListener}">

                <womenproject.com.mybury.util.loadingbutton.customView.CircularProgressButton
                    android:id="@+id/circular_progress_bar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/shape_default"
                    app:finalCornerAngle="50dp"
                    app:initialCornerAngle="0dp"
                    app:spinning_bar_color="@color/subColor"
                    app:spinning_bar_width="1.6dp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/bucket_item_check" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/bucket_item_check"
                    android:backgroundTint="@color/subColor"
                    android:visibility="@{successImgVisible}" />

            </RelativeLayout>


        </RelativeLayout>


    </LinearLayout>


</layout>