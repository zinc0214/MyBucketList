<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="bucketClickListener"
            type="android.view.View.OnClickListener" />

        <variable
            name="bucketTitleText"
            type="String" />

        <variable
            name="currentUserCount"
            type="String" />


        <variable
            name="bucketSuccessClickListener"
            type="android.view.View.OnClickListener" />


    </data>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/bucket_count_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/bucket_item_layout"
                style="@style/BucketItemLayoutStyle"
                android:background="@drawable/mypage_category_background"
                android:onClick="@{bucketClickListener}">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/mypage_category_background">

                    <ImageView
                        android:id="@+id/bucket_succeed_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bucket_item_succeed_background" />

                    <ImageView
                        android:id="@+id/bucket_item_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/bucket_item_base_background" />

                    <RelativeLayout
                        android:id="@+id/count_succeed_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="16dp"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/succeed_bucket_title"
                            style="@style/BucketItemTitleTextStyle"
                            android:layout_marginTop="21dp"
                            android:layout_marginBottom="21dp"
                            android:text="@{bucketTitleText}" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/content_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="16dp"
                        android:layout_marginBottom="19dp"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:id="@+id/prgress_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/bucket_title"
                            android:layout_alignStart="@id/bucket_title"
                            android:layout_marginTop="10dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ProgressBar
                                android:id="@+id/horizontal_progress_bar"
                                style="@android:style/Widget.ProgressBar.Horizontal"
                                android:layout_width="180dp"
                                android:layout_height="6dp"
                                android:max="10"
                                android:progress="10"
                                android:progressDrawable="@drawable/base_horizontal_progressbar" />

                            <TextView
                                android:id="@+id/user_count"
                                android:layout_width="30dp"
                                android:layout_height="14dp"
                                android:layout_marginLeft="4dp"
                                android:gravity="center"
                                android:text="@{currentUserCount}"
                                android:textColor="@color/_a6c6ff"
                                android:textSize="11sp" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/bucket_title"
                            style="@style/BucketItemTitleTextStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="21dp"
                            android:layout_marginRight="70dp"
                            android:maxLines="2"
                            android:text="@{bucketTitleText}" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="64dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:onClick="@{bucketSuccessClickListener}">

                        <include
                            android:id="@+id/success_button_layout"
                            layout="@layout/bucket_succeed_button"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="16dp" />


                    </RelativeLayout>


                </RelativeLayout>

            </LinearLayout>


            <include
                android:id="@+id/last_end_img"
                layout="@layout/list_end_layout" />

        </LinearLayout>

    </RelativeLayout>


</layout>