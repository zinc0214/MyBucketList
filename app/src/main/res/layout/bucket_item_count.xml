<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="bucketClickListener"
            type="android.view.View.OnClickListener" />

        <variable
            name="bucketTitleText"
            type="String" />

        <variable
            name="currentUserCount"
            type="String" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/bucket_item_layout"
            style="@style/BucketItemLayoutStyle"
            android:layout_height="@dimen/countBucketItemHeight"
            android:onClick="@{bucketClickListener}">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/bucket_succeed_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bucket_item_succeed_background" />


                <ImageView
                    android:id="@+id/bucket_item_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bucket_item_base_background" />


                <RelativeLayout
                    android:id="@+id/bucket_count_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="16dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/bucket_title"
                            style="@style/BucketItemTitleTextStyle"
                            android:text="@{bucketTitleText}" />

                        <LinearLayout
                            android:id="@+id/progress_bar_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="18dp"
                            android:layout_below="@+id/bucket_title"
                            android:layout_marginTop="2dp"
                            android:gravity="center">

                            <ProgressBar
                                android:id="@+id/horizontal_progress_bar"
                                style="@android:style/Widget.ProgressBar.Horizontal"
                                android:layout_width="180dp"
                                android:layout_height="6dp"
                                android:layout_gravity="center_vertical"
                                android:max="10"
                                android:progress="10"
                                android:progressDrawable="@drawable/base_horizontal_progressbar" />

                            <TextView
                                android:id="@+id/user_count"
                                android:layout_width="30dp"
                                android:layout_height="18dp"
                                android:gravity="center"
                                android:padding="0dp"
                                android:text="@{currentUserCount}"
                                android:textColor="@color/subColor"
                                android:textSize="11sp" />

                        </LinearLayout>

                    </LinearLayout>

                    <include
                        android:id="@+id/success_button_layout"
                        layout="@layout/bucket_succeed_button"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="16dp" />

                </RelativeLayout>


            </RelativeLayout>

        </LinearLayout>

        <include
            android:id="@+id/last_end_img"
            layout="@layout/list_end_layout"/>


    </LinearLayout>


</layout>