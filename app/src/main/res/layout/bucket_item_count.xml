<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="bucketClickListener"
            type="android.view.View.OnClickListener" />

        <variable
            name="bucketSuccessListener"
            type="android.view.View.OnClickListener" />

        <variable
            name="bucketTitleText"
            type="String" />

        <variable
            name="currentValue"
            type="String" />

        <variable
            name="progressBarVisible"
            type="Integer" />

        <variable
            name="successImgVisible"
            type="Integer" />

    </data>

    <LinearLayout
        android:id="@+id/bucket_item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/bucket_item_background"
        android:minHeight="64dp"
        app:clickToClose="true">

        <RelativeLayout
            android:id="@+id/bucket_count_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="18dp"
            android:onClick="@{bucketClickListener}"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/bucket_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="70dp"
                    android:maxHeight="44dp"
                    android:minHeight="22dp"
                    android:tag="Hover"
                    android:text="@{bucketTitleText}" />

                <LinearLayout
                    android:id="@+id/progress_bar_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:layout_below="@+id/bucket_title"
                    android:layout_marginTop="2dp"
                    android:gravity="center"
                    android:visibility="@{progressBarVisible}">

                    <ProgressBar
                        android:id="@+id/horizontal_progress_bar"
                        style="@android:style/Widget.ProgressBar.Horizontal"
                        android:layout_width="180dp"
                        android:layout_height="6dp"
                        android:layout_gravity="center_vertical"
                        android:max="10"
                        android:progress="10"
                        android:progressDrawable="@drawable/horizontal_progressbar_background" />

                    <TextView
                        android:id="@+id/current_num"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:text="@{currentValue}"
                        android:textAlignment="center"
                        android:textColor="@color/subColor"
                        android:textSize="11sp" />

                </LinearLayout>

            </LinearLayout>


            <RelativeLayout
                android:id="@+id/success_button_layout"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp">

                <womenproject.com.mybury.util.loadingbutton.customView.CircularProgressButton
                    android:id="@+id/circular_progress_bar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/shape_default"
                    android:onClick="@{bucketSuccessListener}"
                    app:finalCornerAngle="50dp"
                    app:initialCornerAngle="0dp"
                    app:spinning_bar_color="@color/subColor"
                    app:spinning_bar_width="1.6dp" />

                <ImageView
                    android:id="@+id/success_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/bucket_item_check" />

            </RelativeLayout>


        </RelativeLayout>


    </LinearLayout>


</layout>