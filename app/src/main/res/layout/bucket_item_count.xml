<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="bucketClickListener"
            type="android.view.View.OnClickListener" />

        <variable
            name="bucketSuccessListener"
            type="android.view.View.OnClickListener" />

        <variable
            name="bucket"
            type="String" />

        <variable
            name="currentValue"
            type="String" />

    </data>

    <LinearLayout
        android:id="@+id/bucket_item_layout"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/bucket_item_background"
        app:clickToClose="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:onClick="@{bucketClickListener}"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/bucket_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:maxHeight="44dp"
                android:tag="Hover"
                android:text="@{bucket}" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bucket_title"
                android:layout_marginTop="2dp"
                android:gravity="center">

                <ProgressBar
                    android:id="@+id/horizontal_progress_bar"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="180dp"
                    android:layout_height="4dp"
                    android:max="100"
                    android:progress="10"
                    android:progressDrawable="@drawable/horizontal_progressbar_background" />

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:text="@{currentValue}"
                    android:textAlignment="center"
                    android:textColor="@color/subColor"
                    android:textSize="11sp" />


            </LinearLayout>

            <RelativeLayout
                android:onClick="@{bucketSuccessListener}"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="8dp">

                <ImageView
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bucket_item_check" />

                <ProgressBar
                    android:id="@+id/circular_progress_bar"
                    style="@style/customProgressBar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:indeterminate="false"
                    android:max="100"
                    android:progress="75"
                    android:progressDrawable="@drawable/circular_progressbar_background"
                    android:secondaryProgress="100" />

            </RelativeLayout>


        </RelativeLayout>


    </LinearLayout>


</layout>