<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="bucketClickListener"
            type="android.view.View.OnClickListener" />

        <variable
            name="bucketTitleText"
            type="String" />

        <variable
            name="bucketSuccessClickListener"
            type="android.view.View.OnClickListener" />

        <variable
            name="ddayText"
            type="String" />

        <variable
            name="isOverDday"
            type="Boolean" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/bucket_item_layout"
            style="@style/BucketItemLayoutStyle"
            android:onClick="@{bucketClickListener}">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/bucket_succeed_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bucket_item_succeed_background" />

                <ImageView
                    android:id="@+id/bucket_item_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bucket_click_background" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="16dp">

                    <TextView
                        android:id="@+id/bucket_title"
                        style="@style/BucketItemTitleTextStyle"
                        android:layout_width="0dp"
                        android:layout_marginTop="21dp"
                        android:layout_marginBottom="21dp"
                        android:layout_marginEnd="10dp"
                        android:text="@{bucketTitleText}"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/ddayTextView"
                        app:layout_constraintHorizontal_bias="0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="가나다라마바사아자차카타파하가나다라마사아자차카타파하" />

                    <RelativeLayout
                        android:id="@+id/success_layout"
                        android:layout_width="64dp"
                        android:layout_height="wrap_content"
                        android:onClick="@{bucketSuccessClickListener}"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <include
                            android:id="@+id/success_button_layout"
                            layout="@layout/bucket_succeed_button"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="16dp" />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/ddayTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="38dp"
                        android:text="@{ddayText}"
                        android:textColor="@{isOverDday ? @color/_ffa690 : @color/_ffca5a}"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/success_layout"
                        app:layout_constraintHorizontal_bias="1"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="D+10"
                        tools:textColor="@color/_ffa690" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</layout>