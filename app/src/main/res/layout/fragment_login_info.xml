<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="logoutClickListener"
            type="android.view.View.OnClickListener" />

        <variable
            name="activity"
            type="womenproject.com.mybury.presentation.mypage.logininfo.LoginInfoFragment" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/back_layout"
            layout="@layout/top_back_btn_layout" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <LinearLayout
                android:gravity="center"
                android:layout_marginTop="132dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <ImageView
                    android:background="@drawable/google_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textSize="14sp"
                    android:textColor="@color/dialogTitleText"
                    android:text="Google 계정으로 로그인하였습니다."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="45dp"
                android:background="@drawable/app_info_button_background"
                android:layout_width="match_parent"
                android:layout_marginStart="60dp"
                android:layout_marginEnd="60dp"
                android:layout_height="40dp">

                <TextView
                    android:textColor="@color/detailContextText"
                    android:textSize="14sp"
                    android:onClick="@{()->activity.accountDeleteClickListener()}"
                    android:gravity="center"
                    android:text="로그아웃"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <TextView
                android:onClick="@{()->activity.accountDeleteClickListener()}"
                android:textSize="11sp"
                android:textColor="@color/detailContextText"
                android:text="@string/account_delete"
                android:layout_marginTop="33dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </RelativeLayout>

</layout>