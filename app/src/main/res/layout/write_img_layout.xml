<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="imgRemoveBtn"
            type="android.view.View.OnClickListener" />

    </data>

        <RelativeLayout
            android:layout_marginRight="10dp"
            android:layout_width="100dp"
            android:layout_height="100dp">

            <ImageView
                android:id="@+id/write_img"
                android:background="@drawable/dday_bucket_item_success_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />


            <RelativeLayout
                android:id="@+id/img_remove_btn"
                android:onClick="@{imgRemoveBtn}"
                android:layout_marginTop="4dp"
                android:layout_marginRight="4dp"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:background="@drawable/write_img_remove_circle"
                    android:layout_width="16dp"
                    android:layout_height="16dp" />

                <ImageView
                    android:layout_centerInParent="true"
                    android:background="@drawable/write_img_remove"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </RelativeLayout>


</layout>