<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="cancelBtnClickListener"
            type="android.view.View.OnClickListener" />


        <variable
            name="registerBtnClickListener"
            type="android.view.View.OnClickListener" />

        <variable
            name="memoImgAddListener"
            type="android.view.View.OnClickListener" />

        <variable
            name="memoRemoveListener"
            type="android.view.View.OnClickListener" />

        <variable
            name="openSettingListener"
            type="android.view.View.OnClickListener" />

        <variable
            name="categorySelectListener"
            type="android.view.View.OnClickListener" />

        <variable
            name="ddayAddListener"
            type="android.view.View.OnClickListener" />

        <variable
            name="goalCountSettingListener"
            type="android.view.View.OnClickListener" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="64dp">

            <TextView
                style="@style/writeTopTextStyle"
                android:layout_marginStart="20dp"
                android:enabled="true"
                android:onClick="@{cancelBtnClickListener}"
                android:text="취소" />


            <TextView
                style="@style/writeTopTextStyle"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:enabled="false"
                android:onClick="@{registerBtnClickListener}"
                android:text="등록" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:background="@color/dividerColor" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="13dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/titleText"
                style="@style/EditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:background="@android:color/transparent"
                android:gravity="top"
                android:hint="새로운 목표를 작성해보세요."
                android:inputType="text"
                android:lineSpacingExtra="9sp"
                android:maxLines="2"
                android:textColor="@color/writeTitleText"
                android:textColorHint="@color/writeUnusedText"
                android:textSize="15sp" />


            <RelativeLayout
                android:id="@+id/memo_layout"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/write_memo_background"
                android:visibility="gone">

                <EditText
                    android:id="@+id/memoText"
                    style="@style/EditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="33dp"
                    android:background="@android:color/transparent"
                    android:gravity="top"
                    android:hint="메모를 작성해주세요."
                    android:inputType="text"
                    android:maxHeight="28dp"
                    android:maxLines="2"
                    android:textColor="@color/writeMemoText"
                    android:textSize="11sp" />

                <ImageView
                    android:id="@+id/memo_remove_img"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="6dp"
                    android:layout_marginRight="6dp"
                    android:background="@drawable/close_btn"
                    android:onClick="@{memoRemoveListener}" />
            </RelativeLayout>


            <LinearLayout
                android:id="@+id/img_layout"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <include
                    layout="@layout/write_img_layout"/>

            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="26dp"
            android:layout_gravity="right"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="26dp"
            android:background="@drawable/memo_img_add_button_background"
            android:onClick="@{memoImgAddListener}">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="+ 메모/이미지"
                android:textColor="@color/mainColor"
                android:textSize="11sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:layout_marginTop="15dp"
            android:background="@color/dividerColor" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:onClick="@{openSettingListener}">

            <TextView
                android:id="@+id/open_text"
                style="@style/writeSettingListTitleTextStyle"
                android:text="@string/bucket_open"
                android:textColor="@color/writeEnableText" />

            <RelativeLayout
                android:id="@+id/select_switch_layout"
                style="@style/writeSwitchLayoutStyle"
                android:visibility="visible">

                <CheckBox
                    android:id="@+id/open_switch_btn"
                    style="@style/FilterDialogSubTextStyle"
                    android:layout_width="50dp"
                    android:layout_height="25dp"
                    android:button="@drawable/write_switch"
                    android:checked="true" />

            </RelativeLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:background="@color/dividerColor" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:onClick="@{categorySelectListener}">

            <TextView
                style="@style/writeSettingListTitleTextStyle"
                android:text="카테고리"
                android:textColor="@color/writeEnableText" />


            <TextView
                android:id="@+id/category_text"
                style="@style/writeSettingListContentStyle"
                android:enabled="false"
                android:text="없음" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:background="@color/dividerColor" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:onClick="@{ddayAddListener}">

            <TextView
                style="@style/writeSettingListTitleTextStyle"
                android:text="D-day"
                android:textColor="@color/writeEnableText" />


            <TextView
                android:id="@+id/dday_text"
                style="@style/writeSettingListContentStyle"
                android:enabled="false"
                android:text="추가" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:background="@color/dividerColor" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:onClick="@{goalCountSettingListener}">

            <TextView
                style="@style/writeSettingListTitleTextStyle"
                android:text="목표 달성 횟수"
                android:textColor="@color/writeEnableText" />


            <TextView
                android:id="@+id/goal_count_text"
                style="@style/writeSettingListContentStyle"
                android:enabled="false"
                android:text="설정" />

        </RelativeLayout>
    </LinearLayout>

</layout>