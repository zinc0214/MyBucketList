<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">


    <data>

        <variable
            name="updateOnClickListener"
            type="android.view.View.OnClickListener" />

        <variable
            name="deleteOnClickListener"
            type="android.view.View.OnClickListener" />

    </data>


    <RelativeLayout
        android:id="@+id/more_menu_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="130dp"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="-10dp"
            android:background="@drawable/mypage_more_back" />

        <LinearLayout
            android:padding="10dp"
            android:layout_width="168dp"
            android:layout_height="90dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/bucket_item_base_background"
            android:orientation="vertical">


            <TextView
                android:paddingLeft="8dp"
                android:background="@drawable/write_dialog_item_background"
                android:id="@+id/profile_edit"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:gravity="center_vertical"
                android:onClick="@{updateOnClickListener}"
                android:text="수정"
                android:textColor="@color/_434343"
                android:textSize="14sp" />


            <TextView
                android:paddingLeft="8dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/write_dialog_item_background"
                android:id="@+id/profile_info"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:gravity="center_vertical"
                android:onClick="@{deleteOnClickListener}"
                android:text="삭제"
                android:textColor="@color/_434343"
                android:textSize="14sp" />



        </LinearLayout>


    </RelativeLayout>

</layout>