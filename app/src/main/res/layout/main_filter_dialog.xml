<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <data>

        <variable
            name="viewModel"
            type="womenproject.com.mybury.viewmodels.FilterDialogViewModel" />

    </data>


    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/filter_layout_background"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="@drawable/filter_dialog_top_background"
            android:orientation="vertical">


            <TextView
                style="@style/FilterDialogCategoryTextStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/visible_bucket" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/filter_checkbox" />

            <TextView
                style="@style/FilterDialogCheckboxTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/doing_bucket" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="14dp"
            android:orientation="horizontal">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/filter_checkbox" />

            <TextView
                style="@style/FilterDialogCheckboxTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/done_bucket" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginTop="28dp"
            android:background="@color/dialogCategoryBackgroundColor"
            android:orientation="vertical">


            <TextView
                style="@style/FilterDialogCategoryTextStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/filter_standard" />


        </LinearLayout>

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="39dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_red"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/filter_radiobtn"
                    android:button="@android:color/transparent"
                    android:checked="true"
                    android:padding="0dp" />


                <TextView
                    style="@style/FilterDialogCheckboxTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sort_by_update" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp">

                <RadioButton
                    android:id="@+id/rb_blue"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/filter_radiobtn"
                    android:button="@android:color/transparent"
                    android:padding="0dp" />


                <TextView
                    style="@style/FilterDialogCheckboxTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sort_by_written" />


            </LinearLayout>

        </RadioGroup>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:background="@drawable/filter_dialog_bottom_binder" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:background="@drawable/filter_dialog_bottom_background">

            <TextView
                android:textSize="14sp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/filter_set"
                android:textColor="#5a95ff" />

        </LinearLayout>

    </LinearLayout>

</layout>