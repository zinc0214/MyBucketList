<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="backBtnOnClickListener"
            type="android.view.View.OnClickListener" />

    </data>

    <RelativeLayout
        android:background="@color/mainBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ScrollView
            android:id="@+id/category_list_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="64dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/category_list_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:listitem="@layout/category_list_item" />

        </ScrollView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolBarLayout"
            android:background="@drawable/toolbar_background"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="64dp">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/back_btn_img"
                    android:onClick="@{backBtnOnClickListener}" />

                <TextView
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="카테고리 편집"
                    android:textColor="@color/subColor"
                    android:textSize="18sp" />


            </RelativeLayout>


        </RelativeLayout>


        <ImageView
            android:layout_above="@+id/base_layout"
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:background="@color/dialogBinder" />

        <LinearLayout
            android:id="@+id/base_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:id="@+id/cancel_text"
                style="@style/baseDialogButtonTextStyle"
                android:background="@color/white"
                android:text="삭제"
                android:textColor="@color/dialogBottomCancelText" />

            <TextView
                android:id="@+id/confirm_text"
                style="@style/baseDialogButtonTextStyle"
                android:background="@color/white"
                android:text="추가"
                android:textColor="@color/dialogBottomConfirmText" />

        </LinearLayout>

        <ImageView
            android:layout_alignParentBottom="true"
            android:layout_width="0.6dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:background="@color/dialogBinder" />

    </RelativeLayout>

</layout>

