<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:id="@android:id/secondaryProgress">
        <shape
            android:innerRadiusRatio="3"
            android:shape="ring"
            android:thickness="1.6dp">

            <gradient
                android:startColor="@color/_e8e8e8"
                android:endColor="@color/_e8e8e8"
                android:centerColor="@color/_e8e8e8"
                android:type="sweep" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <rotate
            android:fromDegrees="270"
            android:pivotX="50%"
            android:pivotY="50%"
            android:toDegrees="270" >
            <shape
                android:innerRadiusRatio="3"
                android:shape="ring"
                android:thickness="1.6dp">
                <rotate
                    android:fromDegrees="0"
                    android:toDegrees="360"
                    android:pivotX="50%"
                    android:pivotY="50%" />
                <gradient
                    android:startColor="@color/subColor"
                    android:endColor="@color/subColor"
                    android:centerColor="@color/subColor"
                    android:type="sweep" />
            </shape>
        </rotate>
    </item>
</layer-list>