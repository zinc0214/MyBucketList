<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@+id/start"
        motion:duration="1000"
        motion:motionInterpolator="linear">

        <ConstraintSet android:id="@+id/start">

            <Constraint
                android:id="@id/background"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginBottom="70dp"
                motion:layout_constraintBottom_toBottomOf="parent"
                motion:layout_constraintEnd_toEndOf="parent"
                motion:layout_constraintStart_toStartOf="parent"
                motion:layout_constraintTop_toTopOf="parent" />

            <Constraint
                android:id="@+id/whiteBackground"
                android:layout_width="match_parent"
                android:layout_height="212dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="44dp"
                android:layout_marginEnd="20dp"
                motion:layout_constraintBottom_toBottomOf="parent"
                motion:layout_constraintStart_toStartOf="parent"
                motion:layout_constraintTop_toTopOf="parent">
                <CustomAttribute
                    motion:attributeName="Crossed"
                    motion:customFloatValue="0" />
            </Constraint>

            <Constraint
                android:id="@+id/more_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/my_page_more"
                motion:layout_constraintEnd_toEndOf="@+id/whiteBackground"
                motion:layout_constraintTop_toTopOf="@+id/whiteBackground" />


            <Constraint
                android:id="@id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="14dp"
                android:textColor="@color/_434343"
                android:textSize="14sp"
                motion:autoSizeTextType="uniform"
                motion:layout_constraintHorizontal_bias="0.5"
                motion:layout_constraintStart_toStartOf="@+id/whiteBackground"
                motion:layout_constraintEnd_toEndOf="@+id/whiteBackground"
                motion:layout_constraintTop_toBottomOf="@+id/large_profile_cardview">

                <CustomAttribute
                    motion:attributeName="textColor"
                    motion:customColorValue="@color/_434343" />
                <CustomAttribute
                    app:attributeName="textSize"
                    app:customFloatValue="14" />
            </Constraint>


            <Constraint
                android:id="@+id/large_profile_cardview"
                android:layout_width="@dimen/image_width"
                android:layout_height="@dimen/image_width"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="72dp"
                android:shadowColor="@android:color/white"
                app:border_width="2dp"
                app:cardCornerRadius="26dp"
                app:cardBackgroundColor="@color/_dddddd"
                app:cardElevation="0dp"
                motion:layout_constraintEnd_toEndOf="@+id/background"
                motion:layout_constraintStart_toStartOf="@+id/background"
                motion:layout_constraintTop_toTopOf="@+id/background"
                motion:layout_constraintVertical_chainStyle="packed" />


            <Constraint
                android:id="@+id/small_profile_cardview"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:shadowColor="@color/_e8e8e8"
                android:visibility="gone"
                app:border_width="2dp"
                app:cardBackgroundColor="@color/_e8e8e8"
                app:cardCornerRadius="20dp"
                app:cardElevation="0.5dp"
                motion:layout_constraintEnd_toEndOf="@+id/large_profile_cardview"
                motion:layout_constraintStart_toStartOf="@+id/large_profile_cardview"
                motion:layout_constraintTop_toTopOf="@+id/large_profile_cardview"
                motion:layout_constraintBottom_toBottomOf="@+id/large_profile_cardview">
            </Constraint>

            <Constraint
                android:id="@+id/bucket_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:alpha="1"
                android:orientation="horizontal"
                motion:layout_constraintBottom_toBottomOf="parent"
                motion:layout_constraintEnd_toEndOf="parent"
                motion:layout_constraintStart_toStartOf="parent" />

        </ConstraintSet>


        <ConstraintSet android:id="@+id/end">
            <Constraint
                android:id="@id/background"
                android:layout_width="0dp"
                android:layout_height="0dp"
                motion:layout_constraintBottom_toBottomOf="parent"
                motion:layout_constraintEnd_toEndOf="parent"
                motion:layout_constraintStart_toStartOf="parent"
                motion:layout_constraintTop_toTopOf="parent" />


            <Constraint
                android:id="@id/whiteBackground"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="154dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="70dp"
                motion:layout_constraintStart_toStartOf="parent"
                motion:layout_constraintBottom_toBottomOf="parent"
                motion:layout_constraintEnd_toEndOf="parent"
                motion:layout_constraintTop_toTopOf="parent">
            </Constraint>


            <Constraint
                android:id="@+id/more_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="16dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/my_page_more"
                motion:layout_constraintEnd_toEndOf="@+id/whiteBackground"
                motion:layout_constraintTop_toTopOf="@+id/whiteBackground" />

            <Constraint
                android:id="@id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:gravity="left|center"
                android:textSize="12sp"
                motion:layout_constraintStart_toEndOf="@+id/small_profile_cardview"
                motion:layout_constraintTop_toTopOf="@+id/whiteBackground"
                motion:layout_constraintBottom_toBottomOf="@+id/whiteBackground">
                <CustomAttribute
                    app:attributeName="textSize"
                    app:customFloatValue="12" />
                <CustomAttribute
                    motion:attributeName="textColor"
                    motion:customColorValue="@color/_434343" />
            </Constraint>

            <Constraint
                android:id="@+id/large_profile_cardview"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:shadowColor="@color/_e8e8e8"
                android:visibility="gone"
                app:border_width="1.5dp"
                app:cardBackgroundColor="@color/_e8e8e8"
                app:cardCornerRadius="16dp"
                app:cardElevation="0.5dp"
                motion:layout_constraintStart_toStartOf="@+id/small_profile_cardview"
                motion:layout_constraintTop_toTopOf="@+id/small_profile_cardview">
            </Constraint>


            <Constraint
                android:id="@+id/small_profile_cardview"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:shadowColor="@color/_e8e8e8"
                android:visibility="visible"
                app:border_width="1.5dp"
                app:cardBackgroundColor="@color/_e8e8e8"
                app:cardCornerRadius="16dp"
                app:cardElevation="0.5dp"
                motion:layout_constraintStart_toStartOf="@+id/whiteBackground"
                motion:layout_constraintTop_toTopOf="@+id/whiteBackground">
            </Constraint>

            <Constraint
                android:id="@+id/bucket_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="0"
                android:orientation="horizontal"
                android:visibility="gone"
                motion:layout_constraintBottom_toBottomOf="@+id/whiteBackground"
                motion:layout_constraintEnd_toEndOf="@+id/whiteBackground"
                motion:layout_constraintStart_toStartOf="@+id/whiteBackground">

            </Constraint>
        </ConstraintSet>

        <OnSwipe
            motion:dragDirection="dragUp"
            motion:touchAnchorId="@id/whiteBackground"
            motion:touchAnchorSide="top" />

    </Transition>
</MotionScene>