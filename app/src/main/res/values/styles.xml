<resources>

    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="AppTheme" parent="BaseAppTheme"/>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="customProgressBar" parent="@android:style/Widget.ProgressBar.Horizontal">

        <item name="android:spacing">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:lineSpacingExtra">0dp</item>
    </style>

    <style name="FilterDialogCategoryTextStyle" parent="Base.Widget.AppCompat.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/dialogCategoryTextColor</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginLeft">20dp</item>
    </style>

    <style name="FilterDialogCheckboxTextStyle" parent="Base.Widget.AppCompat.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/dialogUncheckBoxTextColor</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>


</resources>
